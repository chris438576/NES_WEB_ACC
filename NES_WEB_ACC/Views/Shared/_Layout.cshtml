        .btn-34 :after,
        .btn-34 :before,
        .btn-34:after,
        .btn-34:before {
            border: 0 solid;
            box-sizing: border-box;
            padding: 0;
        }

        .btn-34 {
            -webkit-tap-highlight-color: transparent;
            -webkit-appearance: button;
            background-color: #E0B0D5;
            background-image: none;
            color: #000000;
            cursor: pointer;
            font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji;
            font-size: 100%;
            font-weight: 900;
            line-height: 1.5;
            margin: 0;
            padding-left: 50px;
            padding-right: 50px;
            text-transform: uppercase;
        }

            .btn-34:disabled {
                cursor: default;
            }

            .btn-34:-moz-focusring {
                outline: auto;
            }

            .btn-34 svg {
                display: block;
                vertical-align: middle;
            }

            .btn-34 [hidden] {
                display: none;
            }

        .btn-34 {
            border-radius: 99rem;
            border-width: 2px;
            overflow: hidden;
            position: relative;
        }

            .btn-34:hover {
                background-color: #E5D0E3;
                transform: scale(1.1);
            }

            .btn-34 span {
                font-weight: 900;
                mix-blend-mode: difference;
            }

            .btn-34:before {
                aspect-ratio: 1;
                background: #E5D0E3;
                border-radius: 50%;
                content: "";
                left: 50%;
                position: absolute;
                top: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.2s;
                width: 0;
            }

            .btn-34:hover:before {
                width: 100%;
            }
    </style>
