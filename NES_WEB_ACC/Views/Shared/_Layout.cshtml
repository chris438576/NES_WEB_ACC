        var warningTimer;
        var timeoutTimer;
        var testalerttip = '<div id="alerttip" style="position:fixed;left:0;top:0;width:220px;height:45px;margin:0px;padding:4px 0px 0px 30px;background-color:#f3f41b;color:#000000;font-size:2em;font-weight:bold;border-radius:0px 20px 20px 0px;">這是測試版</div>';

