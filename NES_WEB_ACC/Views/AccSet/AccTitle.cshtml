            $.extend($.fn.validatebox.defaults.rules, {
                pattern: {
                    validator: function (value, param) {
                        return /^\d{3}-\d{2}-\d{3}$/.test(value);
                    },
                    message: '輸入的格式必須是000-00-000.'
                }
            });
        });
         $(document).ready(function() {
            let msg = '@ViewBag.Msg';
            if (msg) {
                $.messager.alert(msglang.Title2, msg);
            }
         });
    </script>
}