@* 會計科目設定MX *@
@{
    ViewBag.Title = @Resources.Content.AccCodeSet + "MX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>
        /*#region container_ToolBar style*/
