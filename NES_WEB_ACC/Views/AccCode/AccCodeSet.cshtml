}

@{ Html.RenderAction("_ToolBarPartial"); }

<div class="body-container">  
    <div class="easyui-layout body-layout">
        <div data-options="region:'west',collapsible:false" title="會計大類" style="width:15%;">
            <table id="maindg" class="datagrid easyui-maindg" style="width:100%;height:99%;">
            </table>
        </div>
        <div data-options="region:'center'" title="會計分類" style="width:30%;">
            <table id="itemdg" class="datagrid easyui-itemdg" style="width:100%;height:99%;">
            </table>
        </div>
        <div data-options="region:'east',collapsible:false" title="會計科目" style="width:55%;">
            <table id="subdg" class="datagrid easyui-subdg" style="width:100%;height:99%;">
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        ///-----基本參數-----///
        //#region 基本參數
        var controllerurl = '/AccCode', functionurl = "/", actionurl = "";
        var maindg = $('#maindg'),   //左側列表_會計大類
            itemdg = $('#itemdg'),       //中間列表_會計分類
            subdg = $('#subdg');   //右側列表_會計科目
        var maindgrowid,
            maindgindex,
            itemdgrowid,
            itemdgindex,
            subdgrowid,
            subdgindex,
            editrow;
        //----初始化----------///
        $(function () {
            //左側列表欄位
            maindgSet();

            //中間列表欄位
            itemdgSet();

            //右側列表欄位
            subdgSet();


        });

        //#region dg設定與填值
        //dg會計大類，欄位與功能
        function maindgSet() {
            maindg.datagrid({
                singleSelect: true,
                columns: [[
                    { field: 'Id', title: 'Id', hidden: true },
                    { field: 'AccGroupNo', title: '大類編號', width: 70 },
                    { field: 'AccGroupNameC', title: '大類中文名稱', width: 100 }
                ]],
                onSelect: function (index, row) {
                    itemdgdata(row.Id);
                    subdgdata();                 
                }
            });
            maindgdata();
        }
        //dg會計大類，填值
        function maindgdata() {
            actionurl = defaultUrl + controllerurl + functionurl + 'GetAccCode1';
            doajax("GET", actionurl, null, function (data) {
                if (data == "C0003") {
                    $.messager.alert('alert', '無會計大類資料!');
                    maindg.datagrid('loadData', '');
                    console.log("C0003: Not Found");
                } else {
                    maindg.datagrid('loadData', data);
                }
            });
        }
        //dg會計分類，欄位與功能
        function itemdgSet() {
            itemdg.datagrid({
                singleSelect: true,
                columns: [[
                    { field: 'Id', title: 'Id', hidden: true },
                    { field: 'AccNoBy', title: '分類編號', width: 70 },
                    { field: 'AccNoByNameC', title: '分類中文名稱', width: 100 },
                    { field: 'DCTypeNo', title: '借貸方向', width: 50 },
                    { field: 'DCTypeNameC', title: '借貸名稱', width: 50 },
                    { field: 'AccNoType', title: '科目類別', width: 100 }
                ]],
                onSelect: function (index, row) {
                    subdgdata(row.Id);
                }
            });
            itemdgdata();
        }
        //dg會計分類，填值
        function itemdgdata(docid) {
            if (docid != null) {
                actionurl = defaultUrl + controllerurl + functionurl + 'GetAccCode2?docid=' + docid;
                doajax("GET", actionurl, null, function (data) {
                    if (data == "C0003") {
                        $.messager.alert('alert', '無會計分類資料!');
                        itemdg.datagrid('loadData', '');
                        console.log("C0003: Not Found");
                    } else {
                        itemdg.datagrid('loadData', data);
                    }
                });
            }           
        }
        //dg會計科目，欄位設定與填值
        function subdgSet() {
            subdg.datagrid({
                singleSelect: true,
                columns: [[
                    { field: 'Id', title: 'Id', hidden: true },
                    { field: 'AccNo', title: '會計科目', width: 100 },
                    { field: 'AccNameC', title: '科目中文名稱', width: 100 },
                    { field: 'DCTypeNo', title: '借貸方向', width: 100 },
                    { field: 'DCTypeNameC', title: '借貸名稱', width: 100 },
                    { field: 'AccCode', title: '會計項目', width: 100, formatter: formatCheckbox },
                    { field: 'IsControl', title: '統治科目', width: 100, formatter: formatCheckbox },
                    { field: 'Status', title: '狀態', hidden: true }
                ]],
                rowStyler: function (index, row) {
                    if (row.Status == 1) {
                        return 'background-color: #f2f2f2 !important ;'; // 背景顏色設為灰色
                    }
                },
                onSelect: function (index, row) {

                }
            });
            subdgdata();
        }
        function subdgdata(accnobyid) {
            if (accnobyid != null) {
                actionurl = defaultUrl + controllerurl + functionurl + 'GetAccTitleNo?accnobyid=' + accnobyid;
                doajax("GET", actionurl, null, function (data) {
                    if (data == "C0003") {
                        $.messager.alert('alert', '無會計科目資料!');
                        subdg.datagrid('loadData', '');
                        console.log("C0003: Not Found");
                    } else {
                        subdg.datagrid('loadData', data);
                    }
                });
            }
            else {
                subdg.datagrid('loadData', '');
            }
        }
        //#endregion

        //#region 按鈕動作
        function btnClick(type) {
            switch (type) {
                //#region dg導覽
                case 'first':
                    break;
                case 'previous':
                    break;
                case 'next':
                    break;
                case 'last':
                    break;
                //#endregion
                //#region dg資料動作
                case 'search':
                    break;
                case 'add':
                    break;
                case 'edit':
                    break;
                case 'save':
                    break;
                case 'refresh':
                    break;
                case 'cancel':
                    break;
                case 'delete':
                    break;
                //#endregion
            }
        }
        //#endregion


        // 自定義doajax
        function doajax(type, url, data, successCallback, errorCallback) {
            $.ajax({
                type: type,
                url: url,
                data: data,
                success: function (response) {
                    if (typeof successCallback === 'function') {
                        successCallback(response);
                    }
                },
                error: function (xhr, status, errorThrown) {
                    if (typeof errorCallback === 'function') {
                        errorCallback(xhr, status, errorThrown);
                    }
                }
            });
        }

        // 自定義 checkbox 顯示格式
        function formatCheckbox(value, row, index) {
            return '<input type="checkbox" ' + (value ? 'checked' : '') + ' disabled>';
        }
    </script>
}