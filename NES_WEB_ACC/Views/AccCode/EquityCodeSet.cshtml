                    tabdg21.datagrid('loadData', '');
                    console.log("C0003: Not Found");
                } else {
                    tabdg21.datagrid('loadData', data);
                }
            });
        }
        //tab_1 dg_2，欄位與功能
        function tabdg22Set() {
            tabdg22.datagrid({
                singleSelect: true,
                columns: [[
                    { field: 'Id', title: 'Id', hidden: true },
                    { field: 'AccNoType', title: '會計科目類別', width: 200 }
                ]],
                onSelect: function (index, row) {

