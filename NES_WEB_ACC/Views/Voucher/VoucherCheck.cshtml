            ///-----按鈕狀態-----///
            btnEnableSet('view');
            ///-----資料填值-----///
            maindgData();
        });
        //#endregion

        //#region dg設定與填值
        ///----- 頁面dg -----///
        function maindgSet() {
            maindg.datagrid({
                singleSelect: true,
                striped: true,
                columns: [[
                    { field: 'WebId', title: 'WebId', hidden: true, type: 'text' },
                    { field: 'Id', title: 'Id', hidden: true, type: 'text' },
                    { field: 'Flag', title: '旗', hidden: true },
