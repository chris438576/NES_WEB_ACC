            MsgErrCode: '@Resources.Content.MsgErrCode',
            MsgSelectRow: '@Resources.Content.MsgSelectRow',
        }
        //#endregion

        //#region 初始化
        $(function () {
            ///-----dg欄位設定-----///
            maindgSet();    //左側列表欄位
